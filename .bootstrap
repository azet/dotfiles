#!/usr/bin/env bash

[[ $(which git zsh wget) ]] || {
    echo "need git, zsh and wget!"
    exit 1
}

# install grml zsh config
wget -O .zshrc http://git.grml.org/f/grml-etc-core/etc/zsh/zshrc

# install grml screen config
wget -O .screenrc http://git.grml.org/f/grml-etc-core/etc/grml/screenrc_generic

# install janus vim  distribution
curl -Lo- https://bit.ly/janus-bootstrap | bash

# clone superior email client config
echo -e "\n\n\nrun \"sudo apt-get install urlview muttprint muttprint-manual mutt-patched w3m mutt\"\n\n\n"
git clone git@github.com:azet/muttrc.git .mutt
echo -e "\n\n\ndon't forget to configure .mutt/!\n\n\n"

# add stuff that's not in a repo
cat > .gitconfig <<EOF
[user]
  name = Aaron Zauner
  email = azet@azet.org
[push]
  default = curlrrent
EOF

cat > .vimrc.after <<EOF
set background=dark
color molokai
let g:rehash256 = 1
EOF

# be done
echo -e "\n\ndone."
