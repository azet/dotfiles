alignment top_right
background yes
update_interval 1.5
total_run_times 0
use_xft yes
own_window yes
own_window_transparent yes
own_window_type normal
own_window_hints undecorated,below,skip_pager,skip_taskbar
own_window_class Conky
own_window_transparent yes
double_buffer yes
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
gap_x 10
gap_y 0
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no


TEXT
${font sans-serif:bold:size=8.5}${color 000000}SYSTEM $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}Host: $alignr $nodename
$sysname $alignr $machine
Kernel: $alignr $kernel

Uptime: $alignr $uptime
Procs: $alignr $processes
Running: $alignr $running_processes
Load Avg: $alignr $loadavg

${font sans-serif:bold:size=8.5}${color 000000}PROCESSORS $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}CPU History:
${cpugraph 25,0 -t}
CPU1: ${cpu cpu1} % ${cpubar cpu1}
CPU2: ${cpu cpu2} % ${cpubar cpu2}
CPU3: ${cpu cpu3} % ${cpubar cpu3}
CPU4: ${cpu cpu4} % ${cpubar cpu4}
CPU5: ${cpu cpu5} % ${cpubar cpu5}
CPU6: ${cpu cpu6} % ${cpubar cpu6}
CPU7: ${cpu cpu7} % ${cpubar cpu7}
CPU8: ${cpu cpu8} % ${cpubar cpu8}

Freq: $alignr ${freq} MHz
Temp: $alignr ${acpitemp} C

${font sans-serif:bold:size=8.5}${color 000000}GPU STATISTICS $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}GPU Freq.: $alignr ${nvidia gpufreq}
Memory Freq.: $alignr ${nvidia memfreq}
Temperature: $alignr ${nvidia temp}

${font sans-serif:bold:size=8.5}${color 000000}TOP PROCS (CPU) $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}${top name 1} $alignr ${top cpu 1} %
${top name 2} $alignr ${top cpu 2} %
${top name 3} $alignr ${top cpu 3} %
${top name 4} $alignr ${top cpu 4} %
${top name 5} $alignr ${top cpu 5} %
${top name 6} $alignr ${top cpu 6} %

${font sans-serif:bold:size=8.5}${color 000000}TOP PROCS (MEM) $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}${top_mem name 1} $alignr ${top_mem mem 1} %
${top_mem name 2} $alignr ${top_mem mem 2} %
${top_mem name 3} $alignr ${top_mem mem 3} %
${top_mem name 4} $alignr ${top_mem mem 4} %

${font sans-serif:bold:size=8.5}${color 000000}MEMORY $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}RAM $alignc $mem / $memmax $alignr $memperc %

${font sans-serif:bold:size=8.5}${color 000000}DISK SPACE $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /} %

${font sans-serif:bold:size=8.5}${color 000000}DISK I/O $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}Read: $alignr $diskio_read
${diskiograph_read 20,0 -t}
${font sans-serif:normal:size=8.5}${color 000000}Write: $alignr $diskio_write
${diskiograph_write 20,0 -t}

${font sans-serif:bold:size=8.5}${color 000000}NETWORK $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}Download: $alignr ${downspeed eth0}/s
${downspeedgraph eth0 20,0 -t}
${font sans-serif:normal:size=8.5}${color 000000}Upload: $alignr ${upspeed eth0}/s
${upspeedgraph eth0 20,0 -t}

${font sans-serif:bold:size=8.5}${color 000000}Current Track $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}
${execi 2 audtool current-song | fold -w 27}

${font sans-serif:bold:size=8.5}${color 000000}DMESG $stippled_hr
${font sans-serif:normal:size=8.5}${color 000000}
${execi 10 dmesg | tail -n 2 | fold -w 27}

